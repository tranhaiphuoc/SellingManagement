<UserControl x:Class="Phuoc_C3_B1.UserControls.ViewInvoiceDetailsBy.uc_ViewInvoiceDetailsByInvoiceId"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Phuoc_C3_B1.UserControls.ViewInvoiceDetailsBy"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <StackPanel Margin="0 30 0 0">
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <StackPanel Orientation="Horizontal">
                <Label Content="PXK:"
                       VerticalContentAlignment="Center"
                       FontSize="18"
                       FontWeight="Bold"/>
                <TextBox Name="tb_invoiceId"
                         Style="{StaticResource tb}"
                         Width="100"/>
            </StackPanel>
            <Button Name="btn_filter"
                    Content="Filter"
                    Margin="15 0 0 0"
                    Style="{StaticResource btn_secondary}"/>
        </StackPanel>
        <StackPanel Name="uc_details"/>
    </StackPanel>
</UserControl>
